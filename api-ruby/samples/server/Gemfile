source 'https://rubygems.org'

gem 'dotenv', groups: [:development, :test]
gem 'httparty'        # HTTP requests
gem 'sinatra', '~> 4.1.1'
gem 'sinatra-contrib' # For JSON support, etc.
gem 'trinsic_api'     # Trinsic API client
gem 'rack', '~> 3.1.12' # Force a compatible version of Rack

group :test do
  gem 'minitest'
  gem 'rack-test'
end
